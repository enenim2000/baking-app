<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:baselineAligned="false"
    android:orientation="horizontal">


    <LinearLayout
        android:id="@+id/recipe_step_description_list_fragment_container"
        android:orientation="vertical"
        android:layout_weight="2.0"
        android:layout_width="0dp"
        android:layout_height="match_parent">

        <!-- Attach RecipeStepDescriptionListFragment to this container -->

    </LinearLayout>

    <LinearLayout
        android:id="@+id/recipe_step_description_detail_fragment_container"
        android:layout_weight="2.0"
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:background="@android:color/white"
        android:orientation="vertical">

        <!-- Attach RecipeVideoFragment to this container -->
        <FrameLayout
            android:id="@+id/recipe_video"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:scaleType="centerInside"/>

        <!-- Attach RecipeStepDescriptionFragment to this container -->
        <FrameLayout
            android:id="@+id/recipe_step_description"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:scaleType="centerInside"/>

    </LinearLayout>

</LinearLayout>

